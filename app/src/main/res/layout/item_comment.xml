<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/_6sdp"
            android:paddingVertical="@dimen/_4ssp">



            <TextView
                android:id="@+id/tv_name_v_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_6sdp"
                android:gravity="left"
                android:lines="1"
                android:maxLines="1"
                android:text="@string/name"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_6sdp"
                android:gravity="left"
                android:lines="1"
                android:maxLines="1"
                android:text="E-mail"
                android:layout_marginLeft="@dimen/_6sdp"
                android:textColor="@color/teal_200"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_name_v_1"
                app:layout_constraintTop_toTopOf="@id/tv_name_v_1"
                app:layout_constraintBottom_toBottomOf="@id/tv_name_v_1"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/tv_email_v_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_6sdp"
                android:gravity="left"
                android:lines="1"
                android:maxLines="1"
                android:text="@string/e_mail"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_3sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_name_v_1"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_6sdp"
                android:gravity="left"
                android:lines="1"
                android:maxLines="1"
                android:text="E-mail"
                android:layout_marginLeft="@dimen/_6sdp"
                android:textColor="@color/teal_200"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_email_v_1"
                app:layout_constraintTop_toTopOf="@id/tv_email_v_1"
                app:layout_constraintBottom_toBottomOf="@id/tv_email_v_1"
                tools:ignore="RtlHardcoded" />


            <TextView
                android:id="@+id/tv_body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_6sdp"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="ajdltoelwemmm\nmmn\nm,.ads"
                android:layout_marginTop="@dimen/_4sdp"
                app:layout_constraintTop_toBottomOf="@id/tv_email_v_1"
                tools:ignore="RtlHardcoded" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</layout>